# Database Configuration
DB_HOST=127.0.0.1
DB_PORT=5432
DB_NAME=hospital_management
DB_USER=postgres
DB_PASSWORD=1234

# JWT Configuration
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=24h
JWT_COOKIE_EXPIRES=30

# Server Configuration
NODE_ENV=development
PORT=3001

# API Configuration
API_PREFIX=/api/v1

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Keycloak Configuration
NEXT_PUBLIC_KEYCLOAK_URL=http://localhost:8180
NEXT_PUBLIC_KEYCLOAK_REALM=HMS
NEXT_PUBLIC_KEYCLOAK_CLIENT_ID=hms-client

# Development Mode (set to 'true' to bypass Keycloak when it's unreachable)
# Set to 'false' to use real Keycloak authentication
NEXT_PUBLIC_USE_DEV_AUTH=false
